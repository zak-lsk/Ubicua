<?xml version="1.0" encoding="UTF-8"?>
<Context path="/duro">
    <Resource 
        name="jdbc/ubicuabd"
        auth="Container"
        type="javax.sql.DataSource"
        driverClassName="com.mysql.cj.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/ubicuabd?serverTimezone=Europe/Madrid" 
        username="ubicua"
        password="ubicua"
        maxTotal="20" 
        maxIdle="10"
        minIdle="5"
        maxWaitMillis="10000"
        validationQuery="SELECT 1"
        testOnBorrow="true" />
</Context>
